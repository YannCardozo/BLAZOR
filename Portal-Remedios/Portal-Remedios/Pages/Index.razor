@page "/index"

<PageTitle>Portal Remedios</PageTitle>

<br />
<div class="container">
    <div class="div-form-medicamento">
        <center>
            <h1 class="mb-3 class_cabecalho_medicamento" id="Cabecalho">@cabecalho</h1>
        </center>
        <form id="Form-medicamentos">
