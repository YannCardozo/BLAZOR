<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <Authorizing>
                    <h1>Autorizando o usuário</h1>
                </Authorizing>
                <NotAuthorized>
                    <!--falta criar um componente para exibir os não autorizados para substituir essa imagem-->
                    <img src="/images/Portugal_road_sign_B2.svg.png" width="400" height="350"/>
                </NotAuthorized>
                <!--<FocusOnNavigate RouteData="@routeData" Selector="h1" />-->
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <PageTitle>Not found</PageTitle>
            <LayoutView Layout="@typeof(MainLayout)">
                <p role="alert">Não encontrado</p>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>
